{
  "name": "zeppelin-element-library",
  "version": "0.1.17",
  "description": "Zeppelin Elements Library is an element library for digital Zeppelin products.",
  "main": "bundle/zeppelin-element-library.cjs.js",
  "module": "bundle/zeppelin-element-library.esm.js",
  "author": "Joerg Schneider <joerg.schneider@z-lab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zepdev/zeppelin-element-library.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage -u",
    "eject": "react-scripts eject",
    "bundle:js": "node rollup.build.js",
    "bundle:misc": "./bundlehandler.sh",
    "bundle": "rm -rf bundle && yarn bundle:js && yarn bundle:misc",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "publish:dev": "yarn publish --tag=development",
    "sonar-scanner": "sonar-scanner"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/guidelines/*"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mdx": "^0.3.1",
    "node-sass": "^4.11.0",
    "node-sass-utils": "^1.1.2",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "^2.1.8",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.3",
    "sonarqube-scanner": "^2.4.0"
  },
  "files": [
    "bundle"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
