{
  "name": "zeppelin-element-library",
  "version": "0.2.6-4b0ffb2",
  "description": "Zeppelin Elements Library is an element library for digital Zeppelin products.",
  "main": "bundle/zeppelin-element-library.cjs.js",
  "module": "bundle/zeppelin-element-library.esm.js",
  "author": "Joerg Schneider <joerg.schneider@z-lab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zepdev/zeppelin-element-library.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn lint && react-scripts test --coverage -u",
    "eject": "react-scripts eject",
    "bundle:js": "node rollup.build.js",
    "bundle:misc": "./bundlehandler.sh",
    "bundle": "rm -rf bundle && yarn bundle:js && yarn bundle:misc",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prettier": "prettier src/**/*.js src/**/*.jsx",
    "publish:dev": "yarn publish --tag=development",
    "sonar-scanner": "sonar-scanner",
    "lint:eslint": "eslint src/**/*.js src/**/*.jsx",
    "lint:prettier": "yarn prettier --check",
    "lint:sonarqube": "yarn lint:eslint -f json -o report.json",
    "lint": "yarn lint:eslint && yarn lint:prettier"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [ci skip]\n\n${nextRelease.notes}"
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 9",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/guidelines/*"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.2",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "babel-preset-es2015-rollup": "^3.0.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mdx": "^0.3.1",
    "node-sass": "^4.11.0",
    "node-sass-utils": "^1.1.2",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-scripts": "^2.1.8",
    "rollup": "^1.7.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.3",
    "sonarqube-scanner": "^2.4.0"
  },
  "files": [
    "bundle"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
