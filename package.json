{
  "name": "zeppelin-element-library",
  "version": "1.2.1",
  "description": "Zeppelin Elements Library is an element library for digital Zeppelin products.",
  "author": "Joerg Schneider <joerg.schneider@z-lab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zepdev/zeppelin-element-library.git"
  },
  "main": "bundle/zeppelin-element-library.cjs.js",
  "module": "bundle/zeppelin-element-library.esm.js",
  "browser": "bundle/zeppelin-element-library.esm.js",
  "unpkg": "bundle/zeppelin-element-library.min.js",
  "files": [
    "dist/*",
    "assets/*",
    "guidelines.json",
    "zeppelin-element-library.css"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn lint && react-scripts test --coverage -u",
    "eject": "react-scripts eject",
    "bundle:js": "node rollup.build.js",
    "bundle:misc": "./bundlehandler.sh",
    "bundle": "rm -rf bundle && yarn bundle:js && yarn bundle:misc",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prettier": "prettier src/**/*.js src/**/*.jsx",
    "publish:check": "semantic-release --branch development --no-ci --dry-run",
    "publish:dev": "yarn publish --tag=next",
    "sonar-scanner": "sonar-scanner",
    "lint:eslint": "eslint src/**/*.js src/**/*.jsx",
    "lint:prettier": "yarn prettier --check",
    "lint:sonarqube": "yarn lint:eslint -f json -o report.json",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "convert": "json-to-scss ./src/themes/guidelines.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 9",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/guidelines/*",
      "!src/**/*.min.js/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-classes": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^7.0.18",
    "@testing-library/dom": "^6.11.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "rollup": "^1.27.13",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^15.13.31",
    "sonarqube-scanner": "^2.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "json-to-scss": "^1.4.0",
    "node-sass": "^4.13.0"
  }
}
