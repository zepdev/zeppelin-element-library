{
  "name": "zeppelin-element-library",
  "version": "1.3.15",
  "description": "Zeppelin Elements Library is an element library for digital Zeppelin products.",
  "author": "Joerg Schneider <joerg.schneider@z-lab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zepdev/zeppelin-element-library.git"
  },
  "main": "bundle/zel.cjs.js",
  "module": "bundle/zel.esm.js",
  "browser": "bundle/zel.esm.js",
  "unpkg": "bundle/zel.min.js",
  "files": [
    "src/*",
    "dist/*",
    "assets/*",
    "guidelines.json",
    "zel.css"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage -u",
    "eject": "react-scripts eject",
    "bundle:js": "node rollup.build.js",
    "bundle:misc": "./bundlehandler.sh",
    "bundle": "rm -rf bundle && yarn bundle:js && yarn bundle:misc",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prettier": "prettier src/**/*.js src/**/*.jsx",
    "publish:check": "semantic-release --branches=master,development --no-ci --dry-run",
    "publish:dev": "yarn publish --tag=next",
    "sonar-scanner": "sonar-scanner",
    "lint:eslint": "eslint src/**/*.js src/**/*.jsx",
    "lint:prettier": "yarn prettier --check",
    "lint:sonarqube": "yarn lint:eslint -f json -o report.json",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "convert": "json-to-scss src/themes/guidelines.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
        "hooks": {
          "pre-commit": "lint-staged"
        }
      },
       "lint-staged": {
           "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
             "prettier --write"
           ]
         },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/guidelines/*",
      "!src/**/*.min.js/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/plugin-transform-classes": "^7.10.4",
    "@babel/preset-env": "^7.12.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/dom": "^7.26.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "husky": "^4.3.0",
    "json-to-scss": "^1.6.2",
    "lint-staged": "^10.4.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.3",
    "rollup": "^2.30.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^17.2.1",
    "sonarqube-scanner": "^2.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
