// Tabs - base style

// this does NOT SUPPORT IE9

@mixin tabs {
  .#{$prefix}tabs {
    width: 100%;
    display: flex;
  }

  .#{$prefix}tab {
    @include typeset('normal', 5);
    color: map-get($colormap-base, gray-light);
    padding: 1.5rem;
    text-transform: uppercase;
    vertical-align: middle;
    border-bottom: 3px solid transparent;
    @include themify($themes) {
      &:hover {
        color: map-get($colormap-base, gray-dark);
        border-bottom: 3px solid themed('primary');
      }
    }
  }

  .#{$prefix}tab--small {
    @include typeset('normal', 4);
    text-transform: capitalize;
  }

  .#{$prefix}tab--icon {
    display: flex;
    align-items: center;
  }

  .#{$prefix}tab__icon {
    padding-right: 10px;
  }
}

@include exports('tabs') {
  @include tabs;
}
